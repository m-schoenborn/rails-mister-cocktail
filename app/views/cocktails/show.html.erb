<div class="cocktails-container">
  <h2 id="heading"><%= @cocktail.name %></h2>

  <table class="table table-bordered">
    <tbody>
      <thead>
        <th>Ingredient</th>
        <th>Description</th>
        <th>Action</th>
      </thead>
      <% @cocktail.doses.each do |dose| %>
        <tr>
          <td><%= dose.ingredient.name %></td>
          <td><%= dose.description %></td>
          <td>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>

  <div class="cocktail-options">
    <div>
      <%= link_to "Add more ingredients", new_cocktail_dose_path(@cocktail) %>
    </div>

    <div>
      <%= link_to "Let's look at more cocktails!", cocktails_path %>
    </div>
  </div>
</div>
